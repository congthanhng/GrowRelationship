<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_g_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Family"
        android:textSize="26sp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@drawable/bg_item_gridview"/>

    <ImageButton
        android:id="@+id/btn_delete_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_20dp"
        android:background="@null"
        android:layout_margin="5dp"
        android:layout_gravity="end"
        />
    <ImageButton
        android:id="@+id/btn_edit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_black_20dp"
        android:background="@null"
        android:layout_margin="5dp"
        android:layout_gravity="end|center_vertical"
        />


</FrameLayout>